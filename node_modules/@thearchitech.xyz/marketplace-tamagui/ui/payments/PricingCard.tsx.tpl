// Pricing Card Component

import React from 'react';
import { 
  YStack, 
  XStack, 
  Button, 
  Text,
  Card,
  CardHeader,
  CardFooter,
  CardContent,
  Badge,
  Theme,
  Square
} from 'tamagui';
import { Check, X, Star } from 'lucide-react-native';
import { useTranslation } from '@/lib/i18n';

interface PricingCardProps {
  plan: {
    id: string;
    name: string;
    description: string;
    price: number;
    currency: string;
    interval: 'month' | 'year' | 'week' | 'day';
    features: string[];
    limitations?: string[];
    isPopular?: boolean;
    isEnterprise?: boolean;
    buttonText?: string;
    buttonVariant?: 'default' | 'outline' | 'secondary';
    onSelect?: (planId: string) => void;
  };
  selectedPlan?: string;
  onSelect?: (planId: string) => void;
  className?: string;
}

export const PricingCard: React.FC<PricingCardProps> = ({
  plan,
  selectedPlan,
  onSelect,
  className = '',
}) => {
  const { t } = useTranslation();
  const isSelected = selectedPlan === plan.id;
  const isPopular = plan.isPopular;
  const isEnterprise = plan.isEnterprise;

  const formatPrice = (price: number, currency: string, interval: string): string => {
    const formattedPrice = new Intl.NumberFormat(undefined, {
      style: 'currency',
      currency: currency,
    }).format(price);

    const intervalMap = {
      day: t('common.time.perDay'),
      week: t('common.time.perWeek'),
      month: t('common.time.perMonth'),
      year: t('common.time.perYear'),
    };

    return `${formattedPrice}${intervalMap[interval as keyof typeof intervalMap] || ''}`;
  };

  const handleSelect = () => {
    onSelect?.(plan.id);
    plan.onSelect?.(plan.id);
  };

  return (
    <Card
      elevate
      bordered
      animation="quick"
      scale={1}
      hoverStyle={{ scale: 1.02 }}
      pressStyle={{ scale: 0.98 }}
      borderColor={isSelected ? "$blue8" : undefined}
      borderWidth={isSelected ? 2 : 1}
      position="relative"
      {...(className ? { className } : {})}
    >
      {isPopular && (
        <YStack position="absolute" top={-12} left="50%" transform={[{ translateX: -40 }]} zIndex={1}>
          <Badge backgroundColor="$blue10" paddingHorizontal="$3" paddingVertical="$1">
            <XStack alignItems="center" gap="$1">
              <Star size={12} color="white" />
              <Text color="white" fontWeight="$6">
                {t('payments.pricing.mostPopular')}
              </Text>
            </XStack>
          </Badge>
        </YStack>
      )}

      {isEnterprise && (
        <YStack position="absolute" top={-12} left="50%" transform={[{ translateX: -40 }]} zIndex={1}>
          <Badge backgroundColor="$purple10" paddingHorizontal="$3" paddingVertical="$1">
            <Text color="white" fontWeight="$6">
              {t('payments.pricing.enterprise')}
            </Text>
          </Badge>
        </YStack>
      )}

      <CardHeader paddingBottom="$4" alignItems="center">
        <Text fontSize="$6" fontWeight="$7">
          {plan.name}
        </Text>
        <Text fontSize="$3" color="$gray11" textAlign="center">
          {plan.description}
        </Text>
        <YStack marginTop="$4">
          <Text fontSize="$8" fontWeight="$8" color="$gray12">
            {formatPrice(plan.price, plan.currency, plan.interval)}
          </Text>
        </YStack>
      </CardHeader>

      <CardContent paddingHorizontal="$4" paddingBottom="$6">
        <YStack space="$6">
          {/* Features */}
          <YStack space="$3">
            {plan.features.map((feature, index) => (
              <XStack key={index} alignItems="flex-start" gap="$3">
                <Square size="$1" alignItems="center" justifyContent="center">
                  <Check size={20} color="$green10" />
                </Square>
                <Text fontSize="$2" color="$gray11" flex={1}>
                  {feature}
                </Text>
              </XStack>
            ))}
          </YStack>

          {/* Limitations */}
          {plan.limitations && plan.limitations.length > 0 && (
            <YStack space="$3">
              <Text fontSize="$2" fontWeight="$5" color="$gray12">
                {t('payments.pricing.limitations')}
              </Text>
              {plan.limitations.map((limitation, index) => (
                <XStack key={index} alignItems="flex-start" gap="$3">
                  <Square size="$1" alignItems="center" justifyContent="center">
                    <X size={20} color="$red10" />
                  </Square>
                  <Text fontSize="$2" color="$gray10" flex={1}>
                    {limitation}
                  </Text>
                </XStack>
              ))}
            </YStack>
          )}

          {/* Action Button */}
          <YStack>
            <Button
              onPress={handleSelect}
              theme={isSelected ? "accent" : undefined}
              variant={isSelected ? "filled" : "outlined"}
              size="$4"
            >
              {isSelected 
                ? t('payments.pricing.selected')
                : (plan.buttonText || t('payments.pricing.choosePlan', { plan: plan.name }))
              }
            </Button>

            {/* Additional Info */}
            {plan.interval === 'year' && (
              <Text fontSize="$1" color="$gray10" textAlign="center" marginTop="$2">
                {t('payments.pricing.yearlyDiscount')}
              </Text>
            )}
          </YStack>
        </YStack>
      </CardContent>
    </Card>
  );
};

