'use client';

import { useState } from 'react';
import { useTranslation } from '@/lib/i18n';
import { 
  YStack, 
  XStack, 
  Card, 
  CardContent, 
  CardDescription, 
  CardHeader, 
  CardTitle,
  Button, 
  Input, 
  Label, 
  Alert, 
  AlertDescription,
  Text,
  Theme,
  Square
} from 'tamagui';
import { Mail, CheckCircle, AlertCircle, RefreshCw } from 'lucide-react-native';

export default function EmailVerification() {
  const { t } = useTranslation();
  const [email, setEmail] = useState('');
  const [verificationCode, setVerificationCode] = useState('');
  const [isResending, setIsResending] = useState(false);
  const [isVerifying, setIsVerifying] = useState(false);
  const [isVerified, setIsVerified] = useState(false);
  const [error, setError] = useState('');
  const [success, setSuccess] = useState('');

  const handleSendVerification = async () => {
    setIsResending(true);
    setError('');
    setSuccess('');

    try {
      // Mock API call - in real app, this would call the verification endpoint
      await new Promise(resolve => setTimeout(resolve, 1000));
      setSuccess(t('auth.emailVerification.emailSent'));
    } catch (err) {
      setError(t('auth.emailVerification.sendError'));
    } finally {
      setIsResending(false);
    }
  };

  const handleVerifyCode = async () => {
    setIsVerifying(true);
    setError('');

    try {
      // Mock verification - in real app, this would call the verification endpoint
      await new Promise(resolve => setTimeout(resolve, 1000));
      
      if (verificationCode === '123456') { // Mock valid code
        setIsVerified(true);
        setSuccess(t('auth.emailVerification.verificationSuccess'));
      } else {
        setError(t('auth.emailVerification.invalidCode'));
      }
    } catch (err) {
      setError(t('auth.emailVerification.verificationFailed'));
    } finally {
      setIsVerifying(false);
    }
  };

  if (isVerified) {
    return (
      <YStack maxWidth={400} marginHorizontal="auto">
        <Card elevate>
          <CardContent paddingTop="$6">
            <YStack alignItems="center" space="$4">
              <Theme name="green">
                <Square size="$6" backgroundColor="$backgroundHover" borderRadius="$full" alignItems="center" justifyContent="center">
                  <CheckCircle size={24} color="$green10" />
                </Square>
              </Theme>
              <YStack alignItems="center">
                <Text fontSize="$5" fontWeight="bold">
                  {t('auth.emailVerification.verified')}
                </Text>
                <Text color="$gray10">
                  {t('auth.emailVerification.verifiedDescription')}
                </Text>
              </YStack>
              <Button 
                theme="accent"
                onPress={() => window.location.href = '/dashboard'}
              >
                <Text>{t('auth.emailVerification.continueToDashboard')}</Text>
              </Button>
            </YStack>
          </CardContent>
        </Card>
      </YStack>
    );
  }

  return (
    <YStack maxWidth={400} marginHorizontal="auto" space="$6">
      <YStack alignItems="center">
        <Theme name="accent">
          <Square size="$6" backgroundColor="$backgroundHover" borderRadius="$full" alignItems="center" justifyContent="center" marginBottom="$4">
            <Mail size={24} color="$color" />
          </Square>
        </Theme>
        <Text fontSize="$5" fontWeight="bold">
          {t('auth.emailVerification.title')}
        </Text>
        <Text color="$gray10">
          {t('auth.emailVerification.description')}
        </Text>
      </YStack>

      <Card elevate>
        <CardHeader>
          <CardTitle>{t('auth.emailVerification.enterCode')}</CardTitle>
          <CardDescription>
            {t('auth.emailVerification.checkEmail')}
          </CardDescription>
        </CardHeader>
        <CardContent space="$4">
          <YStack space="$2">
            <Label htmlFor="email">{t('auth.email')}</Label>
            <Input
              id="email"
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              placeholder={t('auth.emailPlaceholder')}
              disabled
            />
          </YStack>

          <YStack space="$2">
            <Label htmlFor="verification-code">{t('auth.emailVerification.code')}</Label>
            <Input
              id="verification-code"
              value={verificationCode}
              onChange={(e) => setVerificationCode(e.target.value)}
              placeholder="123456"
              maxLength={6}
              textAlign="center"
              fontSize="$5"
              letterSpacing={8}
            />
          </YStack>

          {error && (
            <Alert backgroundColor="$red2" borderColor="$red6">
              <XStack alignItems="center" space="$2">
                <AlertCircle size={16} color="$red10" />
                <AlertDescription>
                  <Text color="$red10">{error}</Text>
                </AlertDescription>
              </XStack>
            </Alert>
          )}

          {success && (
            <Alert backgroundColor="$green2" borderColor="$green6">
              <XStack alignItems="center" space="$2">
                <CheckCircle size={16} color="$green10" />
                <AlertDescription>
                  <Text color="$green10">{success}</Text>
                </AlertDescription>
              </XStack>
            </Alert>
          )}

          <YStack space="$2">
            <Button
              onPress={handleVerifyCode}
              disabled={verificationCode.length !== 6 || isVerifying}
              width="100%"
              theme="accent"
            >
              <Text>
                {isVerifying ? t('auth.emailVerification.verifying') : t('auth.emailVerification.verify')}
              </Text>
            </Button>

            <YStack alignItems="center">
              <Text fontSize="$2" color="$gray10">
                {t('auth.emailVerification.didntReceive')}
              </Text>
              <Button
                variant="link"
                onPress={handleSendVerification}
                disabled={isResending}
              >
                {isResending ? (
                  <XStack alignItems="center" space="$2">
                    <RefreshCw size={16} color="$blue10" className="animate-spin" />
                    <Text fontSize="$2" color="$blue10">{t('auth.emailVerification.sending')}</Text>
                  </XStack>
                ) : (
                  <Text fontSize="$2" color="$blue10">{t('auth.emailVerification.resend')}</Text>
                )}
              </Button>
            </YStack>
          </YStack>
        </CardContent>
      </Card>

      <YStack alignItems="center">
        <Text fontSize="$2" color="$gray10">
          {t('auth.emailVerification.checkSpam')}
        </Text>
      </YStack>
    </YStack>
  );
}


