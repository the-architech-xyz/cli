'use client';

import { useState } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { useTranslation } from '@/lib/i18n';
import { 
  Building2, 
  Plus, 
  Settings, 
  Users, 
  Crown, 
  Shield, 
  User,
  MoreVertical,
  Trash2,
  Edit,
  UserPlus,
  LogOut
} from 'lucide-react-native';
import { 
  YStack, 
  XStack, 
  Button, 
  Card, 
  CardContent, 
  CardDescription, 
  CardHeader, 
  CardTitle,
  Badge,
  Dialog,
  DialogContent,
  DialogDescription,
  DialogHeader,
  DialogTitle,
  DialogTrigger,
  Input,
  Label,
  Text,
  Theme,
  Square,
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuSeparator,
  DropdownMenuTrigger
} from 'tamagui';
import { useAuthService } from '@/lib/auth/hooks';
import type { Organization } from '@/lib/auth/types';

interface OrganizationListProps {
  onCreateOrganization?: () => void;
  onManageOrganization?: (org: Organization) => void;
  className?: string;
}

export function OrganizationList({ 
  onCreateOrganization, 
  onManageOrganization, 
  className 
}: OrganizationListProps) {
  const { t } = useTranslation();
  const [isCreateDialogOpen, setIsCreateDialogOpen] = useState(false);
  const [newOrgName, setNewOrgName] = useState('');
  const [isCreating, setIsCreating] = useState(false);
  const [error, setError] = useState<string | null>(null);

  const { useOrganizations } = useAuthService();
  const { 
    getOrganizations, 
    createOrganization, 
    deleteOrganization, 
    leaveOrganization 
  } = useOrganizations?.() || {};

  const { data: organizations = [], isLoading, error: queryError } = getOrganizations?.() || {};

  const handleCreateOrganization = async () => {
    if (!newOrgName.trim()) return;

    setIsCreating(true);
    setError(null);

    try {
      await createOrganization?.mutateAsync({ name: newOrgName.trim() });
      setNewOrgName('');
      setIsCreateDialogOpen(false);
      onCreateOrganization?.();
    } catch (err) {
      setError(err instanceof Error ? err.message : t('auth.organizations.createError'));
    } finally {
      setIsCreating(false);
    }
  };

  const handleDeleteOrganization = async (org: Organization) => {
    if (!confirm(t('auth.organizations.confirmDelete', { name: org.name }))) {
      return;
    }

    try {
      await deleteOrganization?.mutateAsync(org.id);
    } catch (err) {
      console.error('Failed to delete organization:', err);
    }
  };

  const handleLeaveOrganization = async (org: Organization) => {
    if (!confirm(t('auth.organizations.confirmLeave', { name: org.name }))) {
      return;
    }

    try {
      await leaveOrganization?.mutateAsync(org.id);
    } catch (err) {
      console.error('Failed to leave organization:', err);
    }
  };

  const getRoleIcon = (role: string) => {
    switch (role) {
      case 'owner':
        return <Crown size={16} color="$yellow10" />;
      case 'admin':
        return <Shield size={16} color="$blue10" />;
      case 'member':
        return <User size={16} color="$gray10" />;
      default:
        return <User size={16} color="$gray10" />;
    }
  };

  const getRoleBadgeTheme = (role: string) => {
    switch (role) {
      case 'owner':
        return 'yellow';
      case 'admin':
        return 'blue';
      case 'member':
        return 'gray';
      default:
        return 'gray';
    }
  };

  if (isLoading) {
    return (
      <YStack space="$4">
        <XStack alignItems="center" justifyContent="space-between">
          <Text fontSize="$4" fontWeight="bold">{t('auth.organizations.title')}</Text>
        </XStack>
        <YStack space="$4">
          {[...Array(3)].map((_, i) => (
            <Card key={i} opacity={0.7}>
              <CardContent padding="$4">
                <XStack alignItems="center" space="$3">
                  <Square size="$5" backgroundColor="$gray5" borderRadius="$2" />
                  <YStack space="$2" flex={1}>
                    <Square height="$1" width="33%" backgroundColor="$gray5" borderRadius="$1" />
                    <Square height="$1" width="25%" backgroundColor="$gray5" borderRadius="$1" />
                  </YStack>
                </XStack>
              </CardContent>
            </Card>
          ))}
        </YStack>
      </YStack>
    );
  }

  if (queryError) {
    return (
      <YStack space="$4">
        <XStack alignItems="center" justifyContent="space-between">
          <Text fontSize="$4" fontWeight="bold">{t('auth.organizations.title')}</Text>
        </XStack>
        <Card>
          <CardContent padding="$6" alignItems="center">
            <Text color="$red10">{t('auth.organizations.loadError')}</Text>
          </CardContent>
        </Card>
      </YStack>
    );
  }

  return (
    <YStack space="$4">
      <XStack alignItems="center" justifyContent="space-between">
        <Text fontSize="$4" fontWeight="bold">{t('auth.organizations.title')}</Text>
        <Dialog open={isCreateDialogOpen} onOpenChange={setIsCreateDialogOpen}>
          <DialogTrigger asChild>
            <Button theme="accent">
              <XStack alignItems="center" space="$2">
                <Plus size={16} />
                <Text>{t('auth.organizations.create')}</Text>
              </XStack>
            </Button>
          </DialogTrigger>
          <DialogContent>
            <DialogHeader>
              <DialogTitle>{t('auth.organizations.createNew')}</DialogTitle>
              <DialogDescription>
                {t('auth.organizations.createDescription')}
              </DialogDescription>
            </DialogHeader>
            <YStack space="$4">
              <YStack>
                <Label htmlFor="orgName">{t('auth.organizations.name')}</Label>
                <Input
                  id="orgName"
                  value={newOrgName}
                  onChange={(e) => setNewOrgName(e.target.value)}
                  placeholder={t('auth.organizations.namePlaceholder')}
                  disabled={isCreating}
                />
              </YStack>
              {error && (
                <Text fontSize="$2" color="$red10">{error}</Text>
              )}
              <XStack justifyContent="flex-end" space="$2">
                <Button
                  variant="outlined"
                  onPress={() => setIsCreateDialogOpen(false)}
                  disabled={isCreating}
                >
                  <Text>{t('common.cancel')}</Text>
                </Button>
                <Button
                  theme="accent"
                  onPress={handleCreateOrganization}
                  disabled={!newOrgName.trim() || isCreating}
                >
                  <Text>
                    {isCreating ? t('auth.organizations.creating') : t('auth.organizations.create')}
                  </Text>
                </Button>
              </XStack>
            </YStack>
          </DialogContent>
        </Dialog>
      </XStack>

      {organizations.length === 0 ? (
        <Card>
          <CardContent padding="$8" alignItems="center">
            <Theme name="gray">
              <Square size="$6" marginBottom="$4">
                <Building2 size={24} color="$gray10" />
              </Square>
            </Theme>
            <Text fontSize="$4" fontWeight="bold" marginBottom="$2">
              {t('auth.organizations.noOrgs')}
            </Text>
            <Text color="$gray10" marginBottom="$4" textAlign="center">
              {t('auth.organizations.notMember')}
            </Text>
            <Button 
              theme="accent"
              onPress={() => setIsCreateDialogOpen(true)}
            >
              <XStack alignItems="center" space="$2">
                <Plus size={16} />
                <Text>{t('auth.organizations.createFirst')}</Text>
              </XStack>
            </Button>
          </CardContent>
        </Card>
      ) : (
        <YStack space="$4">
          <AnimatePresence>
            {organizations.map((org) => (
              <motion.div
                key={org.id}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                exit={{ opacity: 0, y: -20 }}
                transition={{ duration: 0.2 }}
                style={{ width: '100%' }}
              >
                <Card elevate hoverStyle={{ scale: 1.01 }} pressStyle={{ scale: 0.99 }}>
                  <CardContent padding="$4">
                    <XStack alignItems="center" justifyContent="space-between">
                      <XStack alignItems="center" space="$3">
                        <Theme name="accent">
                          <Square 
                            size="$5" 
                            backgroundColor="$background" 
                            borderRadius="$2" 
                            alignItems="center" 
                            justifyContent="center"
                          >
                            <Building2 size={20} color="$color" />
                          </Square>
                        </Theme>
                        <YStack>
                          <Text fontWeight="bold">{org.name}</Text>
                          <Text fontSize="$2" color="$gray10">
                            {org.slug}
                          </Text>
                        </YStack>
                      </XStack>
                      
                      <XStack alignItems="center" space="$2">
                        <Theme name={getRoleBadgeTheme(org.role)}>
                          <Badge size="$2" backgroundColor="$backgroundHover">
                            <XStack alignItems="center" space="$1">
                              {getRoleIcon(org.role)}
                              <Text fontSize="$2" textTransform="capitalize">
                                {org.role}
                              </Text>
                            </XStack>
                          </Badge>
                        </Theme>
                        
                        <DropdownMenu>
                          <DropdownMenuTrigger asChild>
                            <Button variant="ghost" size="$2" padding="$1">
                              <MoreVertical size={16} />
                            </Button>
                          </DropdownMenuTrigger>
                          <DropdownMenuContent align="end">
                            <DropdownMenuItem onPress={() => onManageOrganization?.(org)}>
                              <XStack alignItems="center" space="$2">
                                <Settings size={16} />
                                <Text>{t('auth.organizations.manage')}</Text>
                              </XStack>
                            </DropdownMenuItem>
                            <DropdownMenuItem onPress={() => onManageOrganization?.(org)}>
                              <XStack alignItems="center" space="$2">
                                <Users size={16} />
                                <Text>{t('auth.organizations.members')}</Text>
                              </XStack>
                            </DropdownMenuItem>
                            <DropdownMenuItem onPress={() => onManageOrganization?.(org)}>
                              <XStack alignItems="center" space="$2">
                                <UserPlus size={16} />
                                <Text>{t('auth.organizations.invite')}</Text>
                              </XStack>
                            </DropdownMenuItem>
                            <DropdownMenuSeparator />
                            {org.role === 'owner' ? (
                              <DropdownMenuItem 
                                onPress={() => handleDeleteOrganization(org)}
                              >
                                <XStack alignItems="center" space="$2">
                                  <Trash2 size={16} color="$red10" />
                                  <Text color="$red10">{t('auth.organizations.delete')}</Text>
                                </XStack>
                              </DropdownMenuItem>
                            ) : (
                              <DropdownMenuItem 
                                onPress={() => handleLeaveOrganization(org)}
                              >
                                <XStack alignItems="center" space="$2">
                                  <LogOut size={16} color="$red10" />
                                  <Text color="$red10">{t('auth.organizations.leave')}</Text>
                                </XStack>
                              </DropdownMenuItem>
                            )}
                          </DropdownMenuContent>
                        </DropdownMenu>
                      </XStack>
                    </XStack>
                  </CardContent>
                </Card>
              </motion.div>
            ))}
          </AnimatePresence>
        </YStack>
      )}
    </YStack>
  );
}


