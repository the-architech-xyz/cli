'use client';

import { useState } from 'react';
import { useForm } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { z } from 'zod';
import { motion, AnimatePresence } from 'framer-motion';
import { useTranslation } from '@/lib/i18n';
import { 
  Shield, 
  Smartphone, 
  Copy, 
  Check, 
  AlertCircle, 
  Loader2,
  Download,
  Eye,
  EyeOff
} from 'lucide-react-native';
import { 
  YStack, 
  XStack, 
  Button, 
  Input, 
  Label, 
  Card, 
  CardContent, 
  CardDescription, 
  CardHeader, 
  CardTitle,
  Alert, 
  AlertDescription,
  Badge,
  Separator,
  Text,
  Theme,
  Square
} from 'tamagui';
import { useAuthService } from '@/lib/auth/hooks';

const setupSchema = z.object({
  password: z.string().min(1, 'Password is required'),
});

const verifySchema = z.object({
  code: z.string().length(6, 'Code must be 6 digits'),
});

type SetupFormData = z.infer<typeof setupSchema>;
type VerifyFormData = z.infer<typeof verifySchema>;

interface TwoFactorSetupProps {
  onSuccess?: () => void;
  onCancel?: () => void;
  className?: string;
}

export function TwoFactorSetup({ onSuccess, onCancel, className }: TwoFactorSetupProps) {
  const { t } = useTranslation();
  const [step, setStep] = useState<'setup' | 'verify' | 'recovery' | 'complete'>('setup');
  const [qrCode, setQrCode] = useState<string>('');
  const [secret, setSecret] = useState<string>('');
  const [recoveryCodes, setRecoveryCodes] = useState<string[]>([]);
  const [error, setError] = useState<string | null>(null);
  const [copied, setCopied] = useState<string | null>(null);
  const [showRecoveryCodes, setShowRecoveryCodes] = useState(false);

  const { useSecurity } = useAuthService();
  const { setupTwoFactor, verifyTwoFactor } = useSecurity();

  const setupForm = useForm<SetupFormData>({
    resolver: zodResolver(setupSchema),
    defaultValues: {
      password: '',
    },
  });

  const verifyForm = useForm<VerifyFormData>({
    resolver: zodResolver(verifySchema),
    defaultValues: {
      code: '',
    },
  });

  // Setup 2FA
  const handleSetup = async (data: SetupFormData) => {
    try {
      setError(null);
      const result = await setupTwoFactor.mutateAsync({ password: data.password });
      
      if (result.success) {
        setQrCode(result.qrCode || '');
        setSecret(result.secret || '');
        setRecoveryCodes(result.recoveryCodes || []);
        setStep('verify');
      } else {
        setError(result.message || t('auth.twoFactor.setupError'));
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : t('auth.twoFactor.setupError'));
    }
  };

  // Verify 2FA
  const handleVerify = async (data: VerifyFormData) => {
    try {
      setError(null);
      const result = await verifyTwoFactor.mutateAsync({ code: data.code });
      
      if (result.success) {
        setStep('recovery');
      } else {
        setError(result.message || t('auth.twoFactor.invalidCode'));
      }
    } catch (err) {
      setError(err instanceof Error ? err.message : t('auth.twoFactor.verificationFailed'));
    }
  };

  // Complete setup
  const handleComplete = () => {
    setStep('complete');
    setTimeout(() => {
      onSuccess?.();
    }, 2000);
  };

  // Copy to clipboard
  const copyToClipboard = async (text: string, type: string) => {
    try {
      await navigator.clipboard.writeText(text);
      setCopied(type);
      setTimeout(() => setCopied(null), 2000);
    } catch (err) {
      console.error('Failed to copy:', err);
    }
  };

  // Download recovery codes
  const downloadRecoveryCodes = () => {
    const content = recoveryCodes.join('\n');
    const blob = new Blob([content], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = 'recovery-codes.txt';
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
  };

  return (
    <YStack width="100%" maxWidth={800} marginHorizontal="auto">
      <Card elevate>
        <CardHeader alignItems="center">
          <motion.div
            initial={{ scale: 0.8 }}
            animate={{ scale: 1 }}
            transition={{ delay: 0.2, type: "spring", stiffness: 200 }}
            style={{ marginBottom: 16 }}
          >
            <Theme name="accent">
              <Square 
                size="$8" 
                backgroundColor="$background" 
                borderRadius="$full" 
                alignItems="center" 
                justifyContent="center"
              >
                <Shield size={32} color="$color" />
              </Square>
            </Theme>
          </motion.div>
          <CardTitle>{t('auth.twoFactor.title')}</CardTitle>
          <CardDescription>
            {t('auth.twoFactor.description')}
          </CardDescription>
        </CardHeader>

        <CardContent space="$6">
          <AnimatePresence mode="wait">
            {step === 'setup' && (
              <motion.div
                key="setup"
                initial={{ opacity: 0, x: 20 }}
                animate={{ opacity: 1, x: 0 }}
                exit={{ opacity: 0, x: -20 }}
                style={{ display: 'flex', flexDirection: 'column', gap: 24 }}
              >
                <YStack alignItems="center" space="$2">
                  <Text fontSize="$4" fontWeight="bold">{t('auth.twoFactor.step1Title')}</Text>
                  <Text fontSize="$2" color="$gray10" textAlign="center">
                    {t('auth.twoFactor.step1Description')}
                  </Text>
                </YStack>

                <YStack tag="form" onSubmit={setupForm.handleSubmit(handleSetup)} space="$4">
                  <YStack>
                    <Label htmlFor="password">{t('auth.twoFactor.currentPassword')}</Label>
                    <Input
                      id="password"
                      type="password"
                      {...setupForm.register('password')}
                      placeholder={t('auth.twoFactor.enterPassword')}
                      disabled={setupTwoFactor.isPending}
                    />
                    {setupForm.formState.errors.password && (
                      <Text fontSize="$2" color="$red10" marginTop="$1">
                        {setupForm.formState.errors.password.message}
                      </Text>
                    )}
                  </YStack>

                  {error && (
                    <Alert backgroundColor="$red2" borderColor="$red6">
                      <XStack alignItems="center" space="$2">
                        <AlertCircle size={16} color="$red10" />
                        <AlertDescription>
                          <Text color="$red10">{error}</Text>
                        </AlertDescription>
                      </XStack>
                    </Alert>
                  )}

                  <XStack space="$2">
                    <Button
                      type="button"
                      variant="outlined"
                      onPress={onCancel}
                      flex={1}
                    >
                      <Text>{t('common.cancel')}</Text>
                    </Button>
                    <Button
                      type="submit"
                      theme="accent"
                      disabled={setupTwoFactor.isPending}
                      flex={1}
                    >
                      <XStack alignItems="center" space="$2">
                        {setupTwoFactor.isPending ? (
                          <>
                            <Loader2 size={16} color="$color" className="animate-spin" />
                            <Text>{t('auth.twoFactor.settingUp')}</Text>
                          </>
                        ) : (
                          <Text>{t('common.continue')}</Text>
                        )}
                      </XStack>
                    </Button>
                  </XStack>
                </YStack>
              </motion.div>
            )}

            {step === 'verify' && (
              <motion.div
                key="verify"
                initial={{ opacity: 0, x: 20 }}
                animate={{ opacity: 1, x: 0 }}
                exit={{ opacity: 0, x: -20 }}
                style={{ display: 'flex', flexDirection: 'column', gap: 24 }}
              >
                <YStack alignItems="center" space="$2">
                  <Text fontSize="$4" fontWeight="bold">{t('auth.twoFactor.step2Title')}</Text>
                  <Text fontSize="$2" color="$gray10" textAlign="center">
                    {t('auth.twoFactor.step2Description')}
                  </Text>
                </YStack>

                <XStack flexDirection={{ initial: 'column', md: 'row' }} space="$6">
                  <YStack flex={1} space="$4">
                    <YStack 
                      backgroundColor="white" 
                      padding="$4" 
                      borderRadius="$4" 
                      borderWidth={2} 
                      borderStyle="dashed" 
                      borderColor="$gray4" 
                      alignItems="center"
                    >
                      {qrCode ? (
                        <img src={qrCode} alt="2FA QR Code" style={{ maxWidth: '100%' }} />
                      ) : (
                        <YStack height={192} alignItems="center" justifyContent="center">
                          <Loader2 size={32} color="$gray8" className="animate-spin" />
                        </YStack>
                      )}
                    </YStack>
                    
                    <YStack space="$2">
                      <Label htmlFor="secret">{t('auth.twoFactor.manualKey')}</Label>
                      <XStack space="$2">
                        <Input
                          id="secret"
                          value={secret}
                          readOnly
                          fontFamily="$mono"
                          fontSize="$2"
                          flex={1}
                        />
                        <Button
                          type="button"
                          variant="outlined"
                          size="$2"
                          onPress={() => copyToClipboard(secret, 'secret')}
                        >
                          {copied === 'secret' ? (
                            <Check size={16} />
                          ) : (
                            <Copy size={16} />
                          )}
                        </Button>
                      </XStack>
                    </YStack>
                  </YStack>

                  <YStack flex={1} space="$4">
                    <YStack space="$2">
                      <Label>{t('auth.twoFactor.supportedApps')}</Label>
                      <XStack flexWrap="wrap" gap="$2">
                        <Badge backgroundColor="$gray2" borderColor="$gray6" flex={1} justifyContent="center">
                          <XStack alignItems="center" space="$1">
                            <Smartphone size={12} color="$gray10" />
                            <Text fontSize="$2" color="$gray10">Google Authenticator</Text>
                          </XStack>
                        </Badge>
                        <Badge backgroundColor="$gray2" borderColor="$gray6" flex={1} justifyContent="center">
                          <XStack alignItems="center" space="$1">
                            <Smartphone size={12} color="$gray10" />
                            <Text fontSize="$2" color="$gray10">Authy</Text>
                          </XStack>
                        </Badge>
                        <Badge backgroundColor="$gray2" borderColor="$gray6" flex={1} justifyContent="center">
                          <XStack alignItems="center" space="$1">
                            <Smartphone size={12} color="$gray10" />
                            <Text fontSize="$2" color="$gray10">1Password</Text>
                          </XStack>
                        </Badge>
                        <Badge backgroundColor="$gray2" borderColor="$gray6" flex={1} justifyContent="center">
                          <XStack alignItems="center" space="$1">
                            <Smartphone size={12} color="$gray10" />
                            <Text fontSize="$2" color="$gray10">Microsoft Authenticator</Text>
                          </XStack>
                        </Badge>
                      </XStack>
                    </YStack>

                    <Separator />

                    <YStack tag="form" onSubmit={verifyForm.handleSubmit(handleVerify)} space="$4">
                      <YStack>
                        <Label htmlFor="code">{t('auth.twoFactor.verificationCode')}</Label>
                        <Input
                          id="code"
                          {...verifyForm.register('code')}
                          placeholder={t('auth.twoFactor.enter6Digit')}
                          maxLength={6}
                          textAlign="center"
                          fontSize="$5"
                          fontFamily="$mono"
                          letterSpacing={8}
                        />
                        {verifyForm.formState.errors.code && (
                          <Text fontSize="$2" color="$red10" marginTop="$1">
                            {verifyForm.formState.errors.code.message}
                          </Text>
                        )}
                      </YStack>

                      {error && (
                        <Alert backgroundColor="$red2" borderColor="$red6">
                          <XStack alignItems="center" space="$2">
                            <AlertCircle size={16} color="$red10" />
                            <AlertDescription>
                              <Text color="$red10">{error}</Text>
                            </AlertDescription>
                          </XStack>
                        </Alert>
                      )}

                      <Button
                        type="submit"
                        width="100%"
                        theme="accent"
                        disabled={verifyTwoFactor.isPending}
                      >
                        <XStack alignItems="center" space="$2">
                          {verifyTwoFactor.isPending ? (
                            <>
                              <Loader2 size={16} color="$color" className="animate-spin" />
                              <Text>{t('auth.twoFactor.verifying')}</Text>
                            </>
                          ) : (
                            <Text>{t('auth.twoFactor.verifyAndContinue')}</Text>
                          )}
                        </XStack>
                      </Button>
                    </YStack>
                  </YStack>
                </XStack>
              </motion.div>
            )}

            {step === 'recovery' && (
              <motion.div
                key="recovery"
                initial={{ opacity: 0, x: 20 }}
                animate={{ opacity: 1, x: 0 }}
                exit={{ opacity: 0, x: -20 }}
                style={{ display: 'flex', flexDirection: 'column', gap: 24 }}
              >
                <YStack alignItems="center" space="$2">
                  <Text fontSize="$4" fontWeight="bold">{t('auth.twoFactor.step3Title')}</Text>
                  <Text fontSize="$2" color="$gray10" textAlign="center">
                    {t('auth.twoFactor.step3Description')}
                  </Text>
                </YStack>

                <YStack space="$4">
                  <XStack alignItems="center" justifyContent="space-between">
                    <Label>{t('auth.twoFactor.recoveryCodes')}</Label>
                    <XStack space="$2">
                      <Button
                        type="button"
                        variant="outlined"
                        size="$2"
                        onPress={() => setShowRecoveryCodes(!showRecoveryCodes)}
                      >
                        <XStack alignItems="center" space="$1">
                          {showRecoveryCodes ? (
                            <EyeOff size={16} />
                          ) : (
                            <Eye size={16} />
                          )}
                          <Text>{showRecoveryCodes ? t('common.hide') : t('common.show')}</Text>
                        </XStack>
                      </Button>
                      <Button
                        type="button"
                        variant="outlined"
                        size="$2"
                        onPress={() => copyToClipboard(recoveryCodes.join('\n'), 'recovery')}
                      >
                        <XStack alignItems="center" space="$1">
                          {copied === 'recovery' ? (
                            <Check size={16} />
                          ) : (
                            <Copy size={16} />
                          )}
                          <Text>{t('common.copyAll')}</Text>
                        </XStack>
                      </Button>
                      <Button
                        type="button"
                        variant="outlined"
                        size="$2"
                        onPress={downloadRecoveryCodes}
                      >
                        <XStack alignItems="center" space="$1">
                          <Download size={16} />
                          <Text>{t('common.download')}</Text>
                        </XStack>
                      </Button>
                    </XStack>
                  </XStack>

                  <YStack 
                    backgroundColor="$gray2" 
                    padding="$4" 
                    borderRadius="$4"
                  >
                    <XStack flexWrap="wrap" gap="$2">
                      {recoveryCodes.map((code, index) => (
                        <XStack key={index} alignItems="center" space="$2" width="48%">
                          <Text color="$gray10">{index + 1}.</Text>
                          <Text 
                            fontFamily="$mono"
                            color={showRecoveryCodes ? '$color' : 'transparent'} 
                            backgroundColor={showRecoveryCodes ? 'transparent' : '$gray6'} 
                            borderRadius="$1"
                          >
                            {showRecoveryCodes ? code : '••••••••••••'}
                          </Text>
                        </XStack>
                      ))}
                    </XStack>
                  </YStack>

                  <Alert backgroundColor="$blue2" borderColor="$blue6">
                    <XStack alignItems="flex-start" space="$2">
                      <AlertCircle size={16} color="$blue10" marginTop="$1" />
                      <AlertDescription>
                        <YStack>
                          <Text fontWeight="bold" color="$blue10">
                            {t('auth.twoFactor.important')}
                          </Text>
                          <Text color="$blue10">
                            {t('auth.twoFactor.recoveryCodeWarning')}
                          </Text>
                        </YStack>
                      </AlertDescription>
                    </XStack>
                  </Alert>
                </YStack>

                <XStack space="$2">
                  <Button
                    type="button"
                    variant="outlined"
                    onPress={() => setStep('verify')}
                    flex={1}
                  >
                    <Text>{t('common.back')}</Text>
                  </Button>
                  <Button
                    type="button"
                    theme="accent"
                    onPress={handleComplete}
                    flex={1}
                  >
                    <Text>{t('auth.twoFactor.completeSetup')}</Text>
                  </Button>
                </XStack>
              </motion.div>
            )}

            {step === 'complete' && (
              <motion.div
                key="complete"
                initial={{ opacity: 0, scale: 0.8 }}
                animate={{ opacity: 1, scale: 1 }}
                exit={{ opacity: 0, scale: 0.8 }}
                style={{ display: 'flex', flexDirection: 'column', alignItems: 'center', padding: '32px 0' }}
              >
                <Theme name="green">
                  <Square 
                    size="$8" 
                    backgroundColor="$backgroundHover" 
                    borderRadius="$full" 
                    alignItems="center" 
                    justifyContent="center"
                    marginBottom="$4"
                  >
                    <Check size={32} color="$green10" />
                  </Square>
                </Theme>
                <Text fontSize="$4" fontWeight="bold" color="$green10" marginBottom="$2">
                  {t('auth.twoFactor.enabled')}
                </Text>
                <Text fontSize="$2" color="$gray10" textAlign="center">
                  {t('auth.twoFactor.redirecting')}
                </Text>
              </motion.div>
            )}
          </AnimatePresence>
        </CardContent>
      </Card>
    </YStack>
  );
}


