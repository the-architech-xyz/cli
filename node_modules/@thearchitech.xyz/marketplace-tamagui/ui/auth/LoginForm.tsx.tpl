/**
 * Login Form Component (Tamagui)
 * 
 * User login form with i18n support
 */

import React, { useState } from 'react';
import { YStack, XStack, Card, Text, Button, Input, Label, Checkbox, Separator, Spinner } from 'tamagui';
import { useForm, Controller } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { z } from 'zod';
import { useSignIn, useOAuthSignIn } from '@/lib/hooks/use-auth';
import { useTranslation } from '@/lib/i18n';
import { 
  Eye, 
  EyeOff, 
  Mail, 
  Lock, 
  CheckCircle, 
  AlertCircle,
  Shield
} from '@tamagui/lucide-icons';
import Link from 'next/link';
import { AnimatePresence, motion } from '@tamagui/animations-react';

const loginSchema = z.object({
  email: z.string().email('Please enter a valid email address'),
  password: z.string().min(6, 'Password must be at least 6 characters'),
  rememberMe: z.boolean().optional(),
  twoFactorCode: z.string().optional()
});

type LoginFormData = z.infer<typeof loginSchema>;

interface LoginFormProps {
  onSuccess?: () => void;
  onForgotPassword?: () => void;
}

export function LoginForm({ onSuccess, onForgotPassword }: LoginFormProps) {
  const { t } = useTranslation();
  const [showPassword, setShowPassword] = useState(false);
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState<string | null>(null);
  const [success, setSuccess] = useState(false);
  const [requiresTwoFactor, setRequiresTwoFactor] = useState(false);
  
  const signIn = useSignIn();
  const oauthSignIn = useOAuthSignIn();
  
  const {
    control,
    register,
    handleSubmit,
    formState: { errors },
    setValue
  } = useForm<LoginFormData>({
    resolver: zodResolver(loginSchema),
    defaultValues: {
      email: '',
      password: '',
      rememberMe: false,
      twoFactorCode: ''
    },
  });

  const onSubmit = async (data: LoginFormData) => {
    setIsLoading(true);
    setError(null);
    setSuccess(false);
    
    try {
      const result = await signIn.mutateAsync(data);
      
      if (result.requiresTwoFactor) {
        setRequiresTwoFactor(true);
      } else {
        setSuccess(true);
        setTimeout(() => {
          onSuccess?.();
        }, 1000);
      }
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : t('login.error.default');
      setError(errorMessage);
    } finally {
      setIsLoading(false);
    }
  };

  const handleOAuthSignIn = async (provider: 'google' | 'github') => {
    try {
      const { url } = await oauthSignIn.mutateAsync({ provider });
      window.location.href = url;
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : t('login.error.oauth');
      setError(errorMessage);
    }
  };

  const handleForgotPassword = () => {
    onForgotPassword?.();
  };

  return (
    <YStack
      width="100%"
      maxWidth={400}
      alignSelf="center"
      animation="quick"
      enterStyle={{ opacity: 0, y: 20 }}
    >
      <Card
        theme="base"
        size="$4"
        padding="$0"
        backgroundColor="$background"
        borderWidth={1}
        borderColor="$borderColor"
        borderRadius="$6"
        elevation="$4"
      >
        {/* Header */}
        <YStack padding="$8" alignItems="center" gap="$2">
          <XStack
            width="$4"
            height="$4"
            borderRadius="$full"
            backgroundColor="$blue10"
            alignItems="center"
            justifyContent="center"
            marginBottom="$4"
            animation="quick"
            enterStyle={{ scale: 0.8 }}
          >
            <Shield size="$1" color="white" />
          </XStack>
          <Text fontSize="$7" fontWeight="bold" color="$color" textAlign="center">
            {t('login.title')}
          </Text>
          <Text fontSize="$3" color="$colorFocus" textAlign="center">
            {t('login.description')}
          </Text>
        </YStack>
        
        {/* Content */}
        <YStack padding="$6" gap="$6">
          {success ? (
            <YStack
              alignItems="center"
              padding="$8"
              gap="$4"
              animation="quick"
              enterStyle={{ opacity: 0, scale: 0.8 }}
            >
              <CheckCircle size="$6" color="$green10" />
              <Text fontSize="$5" fontWeight="bold" color="$green10">
                {t('login.success.title')}
              </Text>
              <Text fontSize="$3" color="$colorFocus">
                {t('login.success.message')}
              </Text>
            </YStack>
          ) : (
            <YStack gap="$5" animation="quick" enterStyle={{ opacity: 0 }}>
              <YStack asChild gap="$5">
                <form onSubmit={handleSubmit(onSubmit)}>
                  {/* Email */}
                  <YStack gap="$2">
                    <Label htmlFor="email" fontSize="$4" color="$color">
                      {t('login.form.email')}
                    </Label>
                    <XStack position="relative">
                      <Mail 
                        size="$1" 
                        color="$colorFocus" 
                        position="absolute" 
                        left="$3" 
                        top="50%" 
                        transform="translateY(-50%)" 
                      />
                      <Controller
                        control={control}
                        name="email"
                        render={({ field }) => (
                          <Input
                            id="email"
                            value={field.value}
                            onChangeText={field.onChange}
                            placeholder={t('login.form.emailPlaceholder')}
                            backgroundColor="$background"
                            color="$color"
                            borderWidth={1}
                            borderColor={errors.email ? '$red10' : '$borderColor'}
                            borderRadius="$4"
                            padding="$3"
                            paddingLeft="$8"
                            flex={1}
                            disabled={isLoading}
                          />
                        )}
                      />
                    </XStack>
                    {errors.email && (
                      <XStack gap="$1" alignItems="center" animation="quick" enterStyle={{ opacity: 0, y: -10 }}>
                        <AlertCircle size="$1" color="$red10" />
                        <Text fontSize="$2" color="$red10">
                          {errors.email.message}
                        </Text>
                      </XStack>
                    )}
                  </YStack>
                  
                  {/* Password */}
                  <YStack gap="$2">
                    <Label htmlFor="password" fontSize="$4" color="$color">
                      {t('login.form.password')}
                    </Label>
                    <XStack position="relative">
                      <Lock 
                        size="$1" 
                        color="$colorFocus" 
                        position="absolute" 
                        left="$3" 
                        top="50%" 
                        transform="translateY(-50%)" 
                      />
                      <Controller
                        control={control}
                        name="password"
                        render={({ field }) => (
                          <Input
                            id="password"
                            value={field.value}
                            onChangeText={field.onChange}
                            placeholder={t('login.form.passwordPlaceholder')}
                            backgroundColor="$background"
                            color="$color"
                            borderWidth={1}
                            borderColor={errors.password ? '$red10' : '$borderColor'}
                            borderRadius="$4"
                            padding="$3"
                            paddingLeft="$8"
                            paddingRight="$8"
                            flex={1}
                            disabled={isLoading}
                            secureTextEntry={!showPassword}
                          />
                        )}
                      />
                      <Button
                        position="absolute"
                        right="$3"
                        top="50%"
                        transform="translateY(-50%)"
                        size="$2"
                        backgroundColor="transparent"
                        padding="$0"
                        onPress={() => setShowPassword(!showPassword)}
                        disabled={isLoading}
                      >
                        {showPassword ? (
                          <EyeOff size="$1" color="$colorFocus" />
                        ) : (
                          <Eye size="$1" color="$colorFocus" />
                        )}
                      </Button>
                    </XStack>
                    {errors.password && (
                      <XStack gap="$1" alignItems="center" animation="quick" enterStyle={{ opacity: 0, y: -10 }}>
                        <AlertCircle size="$1" color="$red10" />
                        <Text fontSize="$2" color="$red10">
                          {errors.password.message}
                        </Text>
                      </XStack>
                    )}
                  </YStack>

                  {/* Two Factor Code */}
                  {requiresTwoFactor && (
                    <YStack gap="$2" animation="quick" enterStyle={{ opacity: 0, height: 0 }}>
                      <Label htmlFor="twoFactorCode" fontSize="$4" color="$color">
                        {t('login.form.twoFactor')}
                      </Label>
                      <Controller
                        control={control}
                        name="twoFactorCode"
                        render={({ field }) => (
                          <Input
                            id="twoFactorCode"
                            value={field.value || ''}
                            onChangeText={field.onChange}
                            placeholder={t('login.form.twoFactorPlaceholder')}
                            backgroundColor="$background"
                            color="$color"
                            borderWidth={1}
                            borderColor="$borderColor"
                            borderRadius="$4"
                            padding="$3"
                            textAlign="center"
                            fontSize="$5"
                            letterSpacing={8}
                            maxLength={6}
                            disabled={isLoading}
                          />
                        )}
                      />
                      <Text fontSize="$2" color="$colorFocus">
                        {t('login.form.twoFactorHelp')}
                      </Text>
                    </YStack>
                  )}

                  {/* Remember Me & Forgot Password */}
                  <XStack justifyContent="space-between" alignItems="center">
                    <XStack gap="$2" alignItems="center">
                      <Controller
                        control={control}
                        name="rememberMe"
                        render={({ field }) => (
                          <Checkbox
                            id="rememberMe"
                            checked={field.value}
                            onCheckedChange={field.onChange}
                            disabled={isLoading}
                            size="$3"
                            backgroundColor={field.value ? "$blue10" : "transparent"}
                            borderWidth={1}
                            borderColor={field.value ? "$blue10" : "$borderColor"}
                          >
                            <Checkbox.Indicator>
                              <CheckCircle size="$1" color="white" />
                            </Checkbox.Indicator>
                          </Checkbox>
                        )}
                      />
                      <Label htmlFor="rememberMe" fontSize="$3" color="$color">
                        {t('login.form.rememberMe')}
                      </Label>
                    </XStack>
                    <Button
                      size="$2"
                      backgroundColor="transparent"
                      color="$blue10"
                      onPress={handleForgotPassword}
                      disabled={isLoading}
                      padding="$0"
                    >
                      <Text fontSize="$3" color="$blue10">
                        {t('login.form.forgotPassword')}
                      </Text>
                    </Button>
                  </XStack>
                  
                  {/* Error Message */}
                  {error && (
                    <XStack
                      backgroundColor="$red2"
                      borderWidth={1}
                      borderColor="$red6"
                      borderRadius="$4"
                      padding="$4"
                      gap="$3"
                      alignItems="center"
                      animation="quick"
                      enterStyle={{ opacity: 0, y: -10 }}
                    >
                      <AlertCircle size="$1" color="$red10" />
                      <Text fontSize="$3" color="$red10">
                        {error}
                      </Text>
                    </XStack>
                  )}
                  
                  {/* Submit Button */}
                  <Button
                    theme="accent"
                    size="$4"
                    backgroundColor="$blue10"
                    color="white"
                    borderRadius="$4"
                    onPress={handleSubmit(onSubmit)}
                    disabled={isLoading}
                    pressStyle={{ scale: 0.98 }}
                    animation="bouncy"
                  >
                    <XStack gap="$2" alignItems="center">
                      {isLoading && <Spinner size="small" color="white" />}
                      <Text fontSize="$4" fontWeight="bold" color="white">
                        {isLoading ? t('login.form.signingIn') : t('login.form.signIn')}
                      </Text>
                    </XStack>
                  </Button>
                </form>
              </YStack>

              {/* Social Auth */}
              <YStack gap="$4">
                <XStack alignItems="center" gap="$2">
                  <Separator flex={1} borderColor="$borderColor" />
                  <Text fontSize="$2" color="$colorFocus">
                    {t('login.social.or')}
                  </Text>
                  <Separator flex={1} borderColor="$borderColor" />
                </XStack>

                <XStack gap="$3">
                  <Button
                    size="$4"
                    backgroundColor="$backgroundHover"
                    color="$color"
                    borderWidth={1}
                    borderColor="$borderColor"
                    borderRadius="$4"
                    onPress={() => handleOAuthSignIn('google')}
                    disabled={isLoading}
                    flex={1}
                  >
                    <XStack gap="$2" alignItems="center">
                      <XStack width="$1" height="$1">
                        <svg viewBox="0 0 24 24" width="100%" height="100%">
                          <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                          <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                          <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                          <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                        </svg>
                      </XStack>
                      <Text fontSize="$3">Google</Text>
                    </XStack>
                  </Button>
                  <Button
                    size="$4"
                    backgroundColor="$backgroundHover"
                    color="$color"
                    borderWidth={1}
                    borderColor="$borderColor"
                    borderRadius="$4"
                    onPress={() => handleOAuthSignIn('github')}
                    disabled={isLoading}
                    flex={1}
                  >
                    <XStack gap="$2" alignItems="center">
                      <XStack width="$1" height="$1">
                        <svg fill="currentColor" viewBox="0 0 24 24" width="100%" height="100%">
                          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      </XStack>
                      <Text fontSize="$3">GitHub</Text>
                    </XStack>
                  </Button>
                </XStack>
              </YStack>

              {/* Sign Up Link */}
              <YStack alignItems="center">
                <XStack gap="$1">
                  <Text fontSize="$3" color="$colorFocus">
                    {t('login.signup.question')}
                  </Text>
                  <Link href="/auth/signup" passHref>
                    <Text fontSize="$3" color="$blue10" fontWeight="bold">
                      {t('login.signup.action')}
                    </Text>
                  </Link>
                </XStack>
              </YStack>
            </YStack>
          )}
        </YStack>
      </Card>
    </YStack>
  );
}

export default LoginForm;

