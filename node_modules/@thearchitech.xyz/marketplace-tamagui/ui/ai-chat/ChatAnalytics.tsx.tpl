/**
 * Chat Analytics Component (Tamagui)
 * 
 * Analytics dashboard for AI chat with i18n support
 */

import React, { useState, useMemo } from 'react';
import { YStack, XStack, Card, Text, Button, Progress, Badge, Select, Adapt, Sheet } from 'tamagui';
import { useTranslation } from '@/lib/i18n';
import { 
  BarChart3, 
  TrendingUp, 
  TrendingDown, 
  MessageSquare, 
  Clock, 
  DollarSign,
  Users,
  Zap,
  RefreshCw,
  Download,
  Calendar,
  Target,
  Award,
  Activity,
  PieChart,
  LineChart,
  BarChart,
  ArrowUp,
  ArrowDown,
  Minus,
  Info
} from '@tamagui/lucide-icons';
import { ChatAnalytics as ChatAnalyticsType, ConversationAnalytics, UsageStats } from '@/types/ai-chat';

export interface ChatAnalyticsProps {
  analytics: ChatAnalyticsType;
  conversationAnalytics?: ConversationAnalytics;
  usageStats?: UsageStats;
  onRefresh?: () => void;
  onExport?: () => void;
  onTimeRangeChange?: (range: string) => void;
  timeRange?: '7d' | '30d' | '90d' | '1y' | 'all';
  showConversationDetails?: boolean;
  showUsageStats?: boolean;
  showCharts?: boolean;
  showTrends?: boolean;
  showComparisons?: boolean;
  showExport?: boolean;
  showRefresh?: boolean;
  isLoading?: boolean;
  error?: string | null;
}

export function ChatAnalytics({
  analytics,
  conversationAnalytics,
  usageStats,
  onRefresh,
  onExport,
  onTimeRangeChange,
  timeRange = '30d',
  showConversationDetails = true,
  showUsageStats = true,
  showCharts = true,
  showTrends = true,
  showComparisons = true,
  showExport = true,
  showRefresh = true,
  isLoading = false,
  error = null,
}: ChatAnalyticsProps) {
  const { t, formatCurrency } = useTranslation();
  const [selectedMetric, setSelectedMetric] = useState<string>('overview');
  const [chartType, setChartType] = useState<'line' | 'bar' | 'pie'>('line');

  // Calculate trends
  const trends = useMemo(() => {
    const chatGrowth = analytics.chatGrowth;
    const tokenUsage = analytics.tokenUsage;
    const costTrend = analytics.costTrend;

    const getTrend = (data: Array<{ date: string; count: number }>) => {
      if (data.length < 2) return { direction: 'stable', percentage: 0 };
      const latest = data[data.length - 1].count;
      const previous = data[data.length - 2].count;
      const percentage = ((latest - previous) / previous) * 100;
      return {
        direction: percentage > 0 ? 'up' : percentage < 0 ? 'down' : 'stable',
        percentage: Math.abs(percentage)
      };
    };

    return {
      chats: getTrend(chatGrowth),
      tokens: getTrend(tokenUsage),
      cost: getTrend(costTrend)
    };
  }, [analytics]);

  // Format number
  const formatNumber = (num: number): string => {
    if (num >= 1000000) return `${(num / 1000000).toFixed(1)}M`;
    if (num >= 1000) return `${(num / 1000).toFixed(1)}K`;
    return num.toString();
  };

  // Format percentage
  const formatPercentage = (num: number): string => {
    return `${num.toFixed(1)}%`;
  };

  // Get trend icon
  const getTrendIcon = (direction: 'up' | 'down' | 'stable') => {
    switch (direction) {
      case 'up':
        return <ArrowUp size="$1" color="$green10" />;
      case 'down':
        return <ArrowDown size="$1" color="$red10" />;
      default:
        return <Minus size="$1" color="$gray10" />;
    }
  };

  // Get trend color
  const getTrendColor = (direction: 'up' | 'down' | 'stable') => {
    switch (direction) {
      case 'up':
        return '$green10';
      case 'down':
        return '$red10';
      default:
        return '$gray10';
    }
  };

  // Render metric card
  const renderMetricCard = (
    title: string,
    value: string | number,
    subtitle?: string,
    trend?: { direction: 'up' | 'down' | 'stable'; percentage: number },
    icon?: React.ReactNode
  ) => (
    <Card
      theme="base"
      size="$4"
      padding="$4"
      backgroundColor="$background"
      borderWidth={1}
      borderColor="$borderColor"
      borderRadius="$4"
      elevation="$1"
    >
      <XStack justifyContent="space-between" alignItems="flex-start">
        <YStack>
          <Text fontSize="$3" color="$colorFocus">
            {title}
          </Text>
          <Text fontSize="$6" fontWeight="bold" color="$color">
            {value}
          </Text>
          {subtitle && (
            <Text fontSize="$2" color="$colorFocus">
              {subtitle}
            </Text>
          )}
        </YStack>
        {icon && (
          <XStack color="$colorFocus">
            {icon}
          </XStack>
        )}
      </XStack>
      {trend && (
        <XStack gap="$1" marginTop="$2" alignItems="center">
          {getTrendIcon(trend.direction)}
          <Text fontSize="$2" fontWeight="medium" color={getTrendColor(trend.direction)}>
            {formatPercentage(trend.percentage)}
          </Text>
          <Text fontSize="$2" color="$colorFocus">
            {t('analytics.trend.vsPrevious')}
          </Text>
        </XStack>
      )}
    </Card>
  );

  // Render usage progress
  const renderUsageProgress = (
    label: string,
    used: number,
    limit: number,
    unit: string = ''
  ) => {
    const percentage = (used / limit) * 100;
    const isOverLimit = used > limit;
    
    return (
      <YStack gap="$2">
        <XStack justifyContent="space-between" alignItems="center">
          <Text fontSize="$3" color="$color">
            {label}
          </Text>
          <Text fontSize="$3" color={isOverLimit ? '$red10' : '$color'}>
            {formatNumber(used)} / {formatNumber(limit)} {unit}
          </Text>
        </XStack>
        <Progress
          value={Math.min(percentage, 100)}
          backgroundColor="$gray5"
          height="$1"
        >
          <Progress.Indicator backgroundColor={isOverLimit ? '$red10' : '$blue10'} />
        </Progress>
        {isOverLimit && (
          <Text fontSize="$2" color="$red10">
            {t('analytics.usage.overLimit', { amount: formatNumber(used - limit), unit })}
          </Text>
        )}
      </YStack>
    );
  };

  // Render chart placeholder
  const renderChart = (title: string, data: any[], type: 'line' | 'bar' | 'pie' = 'line') => (
    <Card
      theme="base"
      size="$4"
      padding="$0"
      backgroundColor="$background"
      borderWidth={1}
      borderColor="$borderColor"
      borderRadius="$4"
      elevation="$1"
    >
      <YStack padding="$4" paddingBottom="$2">
        <Text fontSize="$4" fontWeight="bold" color="$color">
          {title}
        </Text>
      </YStack>
      <YStack
        height={250}
        alignItems="center"
        justifyContent="center"
        padding="$4"
      >
        <YStack alignItems="center" gap="$2">
          <BarChart3 size="$6" color="$colorFocus" />
          <Text fontSize="$3" color="$colorFocus" textAlign="center">
            {t('analytics.chart.placeholder')}
          </Text>
          <Text fontSize="$2" color="$colorFocus">
            {t('analytics.chart.dataPoints', { count: data.length })}
          </Text>
        </YStack>
      </YStack>
    </Card>
  );

  return (
    <YStack gap="$6">
      {/* Header */}
      <XStack justifyContent="space-between" alignItems="center">
        <YStack>
          <Text fontSize="$5" fontWeight="bold" color="$color">
            {t('analytics.title')}
          </Text>
          <Text fontSize="$3" color="$colorFocus">
            {t('analytics.subtitle')}
          </Text>
        </YStack>
        <XStack gap="$2">
          {showRefresh && (
            <Button
              size="$3"
              backgroundColor="$backgroundHover"
              color="$color"
              borderWidth={1}
              borderColor="$borderColor"
              borderRadius="$4"
              onPress={onRefresh}
              disabled={isLoading}
            >
              <XStack gap="$1" alignItems="center">
                <RefreshCw size="$1" opacity={isLoading ? 0.5 : 1} />
                <Text fontSize="$3">
                  {t('analytics.actions.refresh')}
                </Text>
              </XStack>
            </Button>
          )}
          {showExport && (
            <Button
              size="$3"
              backgroundColor="$backgroundHover"
              color="$color"
              borderWidth={1}
              borderColor="$borderColor"
              borderRadius="$4"
              onPress={onExport}
            >
              <XStack gap="$1" alignItems="center">
                <Download size="$1" />
                <Text fontSize="$3">
                  {t('analytics.actions.export')}
                </Text>
              </XStack>
            </Button>
          )}
        </XStack>
      </XStack>

      {/* Time Range Selector */}
      <XStack gap="$4" alignItems="center">
        <Select
          value={timeRange}
          onValueChange={onTimeRangeChange}
        >
          <Select.Trigger
            backgroundColor="$background"
            borderColor="$borderColor"
            borderRadius="$4"
            width={150}
          >
            <Select.Value placeholder={t('analytics.timeRange.placeholder')} />
          </Select.Trigger>

          <Adapt when="sm" platform="touch">
            <Sheet
              modal
              dismissOnSnapToBottom
              snapPointsMode="fit"
            >
              <Sheet.Frame>
                <Sheet.ScrollView>
                  <Adapt.Contents />
                </Sheet.ScrollView>
              </Sheet.Frame>
              <Sheet.Overlay />
            </Sheet>
          </Adapt>

          <Select.Content zIndex={200000}>
            <Select.ScrollUpButton />
            <Select.Viewport minHeight={120}>
              <Select.Group>
                <Select.Label>{t('analytics.timeRange.label')}</Select.Label>
                <Select.Item index={0} value="7d">
                  <Select.ItemText>{t('analytics.timeRange.7d')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={1} value="30d">
                  <Select.ItemText>{t('analytics.timeRange.30d')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={2} value="90d">
                  <Select.ItemText>{t('analytics.timeRange.90d')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={3} value="1y">
                  <Select.ItemText>{t('analytics.timeRange.1y')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={4} value="all">
                  <Select.ItemText>{t('analytics.timeRange.all')}</Select.ItemText>
                </Select.Item>
              </Select.Group>
            </Select.Viewport>
            <Select.ScrollDownButton />
          </Select.Content>
        </Select>
        
        <Select
          value={chartType}
          onValueChange={(value: 'line' | 'bar' | 'pie') => setChartType(value)}
        >
          <Select.Trigger
            backgroundColor="$background"
            borderColor="$borderColor"
            borderRadius="$4"
            width={100}
          >
            <Select.Value placeholder={t('analytics.chartType.placeholder')} />
          </Select.Trigger>

          <Adapt when="sm" platform="touch">
            <Sheet
              modal
              dismissOnSnapToBottom
              snapPointsMode="fit"
            >
              <Sheet.Frame>
                <Sheet.ScrollView>
                  <Adapt.Contents />
                </Sheet.ScrollView>
              </Sheet.Frame>
              <Sheet.Overlay />
            </Sheet>
          </Adapt>

          <Select.Content zIndex={200000}>
            <Select.ScrollUpButton />
            <Select.Viewport minHeight={120}>
              <Select.Group>
                <Select.Label>{t('analytics.chartType.label')}</Select.Label>
                <Select.Item index={0} value="line">
                  <Select.ItemText>{t('analytics.chartType.line')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={1} value="bar">
                  <Select.ItemText>{t('analytics.chartType.bar')}</Select.ItemText>
                </Select.Item>
                <Select.Item index={2} value="pie">
                  <Select.ItemText>{t('analytics.chartType.pie')}</Select.ItemText>
                </Select.Item>
              </Select.Group>
            </Select.Viewport>
            <Select.ScrollDownButton />
          </Select.Content>
        </Select>
      </XStack>

      {/* Error State */}
      {error && (
        <Card
          theme="base"
          size="$4"
          padding="$4"
          backgroundColor="$red2"
          borderWidth={1}
          borderColor="$red6"
          borderRadius="$4"
        >
          <XStack gap="$2" alignItems="center">
            <Info size="$1" color="$red10" />
            <Text fontSize="$3" color="$red10">
              {error}
            </Text>
          </XStack>
        </Card>
      )}

      {/* Overview Metrics */}
      <XStack flexWrap="wrap" gap="$4">
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.metrics.totalChats'),
            analytics.totalChats,
            t('analytics.metrics.conversations'),
            trends.chats,
            <MessageSquare size="$1" />
          )}
        </YStack>
        
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.metrics.totalMessages'),
            analytics.totalMessages,
            t('analytics.metrics.messagesSent'),
            trends.chats,
            <MessageSquare size="$1" />
          )}
        </YStack>
        
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.metrics.totalTokens'),
            formatNumber(analytics.totalTokens),
            t('analytics.metrics.tokensUsed'),
            trends.tokens,
            <Zap size="$1" />
          )}
        </YStack>
        
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.metrics.totalCost'),
            formatCurrency(analytics.totalCost),
            t('analytics.metrics.spent'),
            trends.cost,
            <DollarSign size="$1" />
          )}
        </YStack>
      </XStack>

      {/* Usage Stats */}
      {showUsageStats && usageStats && (
        <Card
          theme="base"
          size="$4"
          padding="$0"
          backgroundColor="$background"
          borderWidth={1}
          borderColor="$borderColor"
          borderRadius="$4"
          elevation="$1"
        >
          <YStack padding="$4" paddingBottom="$2">
            <Text fontSize="$4" fontWeight="bold" color="$color">
              {t('analytics.usage.title')}
            </Text>
          </YStack>
          <YStack padding="$4" paddingTop="$0" gap="$4">
            <XStack flexWrap="wrap" gap="$6">
              <YStack flex={1} minWidth={250} gap="$4">
                <Text fontSize="$3" fontWeight="bold" color="$color">
                  {t('analytics.usage.daily')}
                </Text>
                <YStack gap="$3">
                  {renderUsageProgress(
                    t('analytics.usage.chats'),
                    usageStats.usage.dailyChats,
                    usageStats.limits.dailyChats
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.messages'),
                    usageStats.usage.dailyMessages,
                    usageStats.limits.dailyMessages
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.tokens'),
                    usageStats.usage.dailyTokens,
                    usageStats.limits.dailyTokens
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.cost'),
                    usageStats.usage.dailyCost,
                    usageStats.limits.dailyCost,
                    'USD'
                  )}
                </YStack>
              </YStack>
              
              <YStack flex={1} minWidth={250} gap="$4">
                <Text fontSize="$3" fontWeight="bold" color="$color">
                  {t('analytics.usage.weekly')}
                </Text>
                <YStack gap="$3">
                  {renderUsageProgress(
                    t('analytics.usage.chats'),
                    usageStats.weekly.chats,
                    usageStats.limits.dailyChats * 7
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.messages'),
                    usageStats.weekly.messages,
                    usageStats.limits.dailyMessages * 7
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.tokens'),
                    usageStats.weekly.tokens,
                    usageStats.limits.dailyTokens * 7
                  )}
                  {renderUsageProgress(
                    t('analytics.usage.cost'),
                    usageStats.weekly.cost,
                    usageStats.limits.dailyCost * 7,
                    'USD'
                  )}
                </YStack>
              </YStack>
            </XStack>
          </YStack>
        </Card>
      )}

      {/* Charts */}
      {showCharts && (
        <XStack flexWrap="wrap" gap="$6">
          <YStack flex={1} minWidth={300}>
            {renderChart(t('analytics.charts.chatGrowth'), analytics.chatGrowth, chartType)}
          </YStack>
          <YStack flex={1} minWidth={300}>
            {renderChart(t('analytics.charts.tokenUsage'), analytics.tokenUsage, chartType)}
          </YStack>
          <YStack flex={1} minWidth={300}>
            {renderChart(t('analytics.charts.costTrend'), analytics.costTrend, chartType)}
          </YStack>
        </XStack>
      )}

      {/* Conversation Details */}
      {showConversationDetails && conversationAnalytics && (
        <Card
          theme="base"
          size="$4"
          padding="$0"
          backgroundColor="$background"
          borderWidth={1}
          borderColor="$borderColor"
          borderRadius="$4"
          elevation="$1"
        >
          <YStack padding="$4" paddingBottom="$2">
            <Text fontSize="$4" fontWeight="bold" color="$color">
              {t('analytics.conversation.title')}
            </Text>
          </YStack>
          <YStack padding="$4" paddingTop="$0" gap="$4">
            <XStack flexWrap="wrap" gap="$4">
              <YStack flex={1} minWidth={100} alignItems="center">
                <Text fontSize="$6" fontWeight="bold" color="$color">
                  {conversationAnalytics.messageCount}
                </Text>
                <Text fontSize="$3" color="$colorFocus">
                  {t('analytics.conversation.messages')}
                </Text>
              </YStack>
              <YStack flex={1} minWidth={100} alignItems="center">
                <Text fontSize="$6" fontWeight="bold" color="$color">
                  {conversationAnalytics.averageResponseTime}ms
                </Text>
                <Text fontSize="$3" color="$colorFocus">
                  {t('analytics.conversation.avgResponseTime')}
                </Text>
              </YStack>
              <YStack flex={1} minWidth={100} alignItems="center">
                <Text fontSize="$6" fontWeight="bold" color="$color">
                  {conversationAnalytics.userSatisfaction}/10
                </Text>
                <Text fontSize="$3" color="$colorFocus">
                  {t('analytics.conversation.userSatisfaction')}
                </Text>
              </YStack>
            </XStack>
            
            {conversationAnalytics.topics.length > 0 && (
              <YStack gap="$2">
                <Text fontSize="$3" fontWeight="bold" color="$color">
                  {t('analytics.conversation.topics')}
                </Text>
                <XStack flexWrap="wrap" gap="$1">
                  {conversationAnalytics.topics.map((topic, index) => (
                    <Badge
                      key={index}
                      backgroundColor="$gray5"
                      color="$color"
                      borderRadius="$4"
                      size="$2"
                    >
                      <Text fontSize="$2">
                        {topic}
                      </Text>
                    </Badge>
                  ))}
                </XStack>
              </YStack>
            )}
          </YStack>
        </Card>
      )}

      {/* Performance Metrics */}
      <XStack flexWrap="wrap" gap="$4">
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.performance.avgMessagesPerChat'),
            analytics.averageMessagesPerChat.toFixed(1),
            t('analytics.performance.messages'),
            undefined,
            <Target size="$1" />
          )}
        </YStack>
        
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.performance.avgTokensPerMessage'),
            analytics.averageTokensPerMessage.toFixed(0),
            t('analytics.performance.tokens'),
            undefined,
            <Activity size="$1" />
          )}
        </YStack>
        
        <YStack flex={1} minWidth={200}>
          {renderMetricCard(
            t('analytics.performance.mostUsedModel'),
            analytics.mostUsedModel,
            t('analytics.performance.primaryModel'),
            undefined,
            <Award size="$1" />
          )}
        </YStack>
      </XStack>
    </YStack>
  );
}

export default ChatAnalytics;

