'use client';

import React, { useRef, useEffect, useState, useMemo } from 'react';
import { useChat } from '@ai-sdk/react';
import { useTranslation } from '@/lib/i18n';
import { 
  Bot, 
  User, 
  Copy, 
  Trash2, 
  RotateCcw, 
  Search, 
  Filter,
  MoreVertical,
  ChevronDown,
  ChevronUp
} from 'lucide-react-native';

import {
  YStack,
  XStack,
  Button,
  Card,
  CardContent,
  Avatar,
  AvatarFallback,
  AvatarImage,
  ScrollView,
  Badge,
  Separator,
  Text,
  Input,
  Select,
  SelectTrigger,
  SelectContent,
  SelectItem,
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuTrigger,
  Theme,
  Square
} from 'tamagui';

// Define types if not imported
type MessageRole = 'user' | 'assistant' | 'system';
type MessageStatus = 'sending' | 'sent' | 'failed' | 'streaming';

interface Message {
  id: string;
  content: string;
  role: MessageRole;
  timestamp: string;
  status: MessageStatus;
  attachments?: Array<{
    id: string;
    name: string;
    type: string;
  }>;
}

export interface MessageFilters {
  role?: MessageRole;
  status?: MessageStatus;
  dateRange?: {
    start: Date;
    end: Date;
  };
  searchQuery?: string;
}

export interface MessageHistoryProps {
  showSearch?: boolean;
  showFilters?: boolean;
  maxHeight?: string | number;
  onMessageAction?: (action: 'copy' | 'delete' | 'regenerate', messageId: string) => void;
  onSearch?: (query: string) => void;
  onFilter?: (filters: MessageFilters) => void;
}

export function MessageHistory({
  showSearch = true,
  showFilters = true,
  maxHeight = 600,
  onMessageAction,
  onSearch,
  onFilter,
}: MessageHistoryProps) {
  const { t } = useTranslation();
  const { messages, isLoading, error } = useChat();
  const [searchQuery, setSearchQuery] = useState('');
  const [filters, setFilters] = useState<MessageFilters>({});
  const [expandedGroups, setExpandedGroups] = useState<Set<string>>(new Set());
  const [showFiltersPanel, setShowFiltersPanel] = useState(false);
  const messagesEndRef = useRef<HTMLDivElement>(null);
  const searchInputRef = useRef<HTMLInputElement>(null);

  // Auto-scroll to bottom when new messages arrive
  useEffect(() => {
    messagesEndRef.current?.scrollIntoView({ behavior: 'smooth' });
  }, [messages]);

  // Group messages by date
  const groupedMessages = useMemo(() => {
    const groups: Record<string, Message[]> = {};
    
    messages.forEach((message) => {
      const date = new Date(message.timestamp).toDateString();
      if (!groups[date]) {
        groups[date] = [];
      }
      groups[date].push(message);
    });

    return groups;
  }, [messages]);

  // Filter messages based on search and filters
  const filteredMessages = useMemo(() => {
    let filtered = messages;

    // Apply search filter
    if (searchQuery) {
      filtered = filtered.filter(message =>
        message.content.toLowerCase().includes(searchQuery.toLowerCase())
      );
    }

    // Apply role filter
    if (filters.role) {
      filtered = filtered.filter(message => message.role === filters.role);
    }

    // Apply status filter
    if (filters.status) {
      filtered = filtered.filter(message => message.status === filters.status);
    }

    // Apply date range filter
    if (filters.dateRange) {
      filtered = filtered.filter(message => {
        const messageDate = new Date(message.timestamp);
        return messageDate >= filters.dateRange!.start && messageDate <= filters.dateRange!.end;
      });
    }

    return filtered;
  }, [messages, searchQuery, filters]);

  // Group filtered messages by date
  const filteredGroupedMessages = useMemo(() => {
    const groups: Record<string, Message[]> = {};
    
    filteredMessages.forEach((message) => {
      const date = new Date(message.timestamp).toDateString();
      if (!groups[date]) {
        groups[date] = [];
      }
      groups[date].push(message);
    });

    return groups;
  }, [filteredMessages]);

  const handleSearch = (query: string) => {
    setSearchQuery(query);
    onSearch?.(query);
  };

  const handleFilterChange = (newFilters: Partial<MessageFilters>) => {
    const updatedFilters = { ...filters, ...newFilters };
    setFilters(updatedFilters);
    onFilter?.(updatedFilters);
  };

  const toggleGroup = (date: string) => {
    const newExpanded = new Set(expandedGroups);
    if (newExpanded.has(date)) {
      newExpanded.delete(date);
    } else {
      newExpanded.add(date);
    }
    setExpandedGroups(newExpanded);
  };

  const copyMessage = (content: string) => {
    navigator.clipboard.writeText(content);
  };

  const formatTimestamp = (timestamp: string): string => {
    return new Intl.DateTimeFormat('en-US', {
      hour: '2-digit',
      minute: '2-digit',
      hour12: true,
    }).format(new Date(timestamp));
  };

  const formatDate = (date: string): string => {
    const messageDate = new Date(date);
    const today = new Date();
    const yesterday = new Date(today);
    yesterday.setDate(yesterday.getDate() - 1);

    if (messageDate.toDateString() === today.toDateString()) {
      return t('common.today');
    } else if (messageDate.toDateString() === yesterday.toDateString()) {
      return t('common.yesterday');
    } else {
      return messageDate.toLocaleDateString('en-US', {
        weekday: 'long',
        year: 'numeric',
        month: 'long',
        day: 'numeric',
      });
    }
  };

  const getStatusColor = (status: MessageStatus): string => {
    switch (status) {
      case 'sending':
        return '$yellow10';
      case 'sent':
        return '$green10';
      case 'failed':
        return '$red10';
      case 'streaming':
        return '$blue10';
      default:
        return '$gray10';
    }
  };

  const getStatusText = (status: MessageStatus): string => {
    switch (status) {
      case 'sending':
        return t('chat.sending');
      case 'sent':
        return t('chat.sent');
      case 'failed':
        return t('chat.failed');
      case 'streaming':
        return t('chat.streaming');
      default:
        return t('chat.unknown');
    }
  };

  if (error) {
    return (
      <YStack height={128} justifyContent="center" alignItems="center">
        <Card width="100%" maxWidth={400}>
          <CardContent padding="$6" alignItems="center">
            <Text color="$red10" marginBottom="$2" fontWeight="$6">
              {t('errors.loadingMessages')}
            </Text>
            <Text fontSize="$2" color="$colorFocus">
              {error.message}
            </Text>
          </CardContent>
        </Card>
      </YStack>
    );
  }

  return (
    <YStack flex={1} height="100%">
      {/* Search and Filters */}
      {(showSearch || showFilters) && (
        <YStack padding="$4" borderBottomWidth={1} borderBottomColor="$borderColor" space="$3">
          {showSearch && (
            <XStack position="relative">
              <XStack position="absolute" left="$3" top="50%" alignItems="center" transform={[{ translateY: -8 }]}>
                <Search size={16} color="$colorFocus" />
              </XStack>
              <Input
                ref={searchInputRef}
                placeholder={t('chat.searchMessages')}
                value={searchQuery}
                onChangeText={handleSearch}
                paddingLeft="$10"
                flex={1}
              />
            </XStack>
          )}
          
          {showFilters && (
            <XStack alignItems="center" gap="$2">
              <Button
                variant="outlined"
                size="$2"
                onPress={() => setShowFiltersPanel(!showFiltersPanel)}
              >
                <XStack alignItems="center" gap="$2">
                  <Filter size={16} />
                  <Text>{t('common.filters')}</Text>
                  {showFiltersPanel ? (
                    <ChevronUp size={16} />
                  ) : (
                    <ChevronDown size={16} />
                  )}
                </XStack>
              </Button>
              
              {Object.keys(filters).length > 0 && (
                <Button
                  chromeless
                  size="$2"
                  onPress={() => {
                    setFilters({});
                    setSearchQuery('');
                  }}
                >
                  <Text>{t('common.clear')}</Text>
                </Button>
              )}
            </XStack>
          )}

          {/* Filters Panel */}
          {showFiltersPanel && (
            <YStack 
              padding="$4" 
              backgroundColor="$backgroundHover" 
              borderRadius="$2"
            >
              <XStack gap="$4">
                <YStack flex={1}>
                  <Text fontWeight="$6" marginBottom="$2" fontSize="$2">
                    {t('chat.role')}
                  </Text>
                  <Select
                    value={filters.role || ''}
                    onValueChange={(value) => handleFilterChange({ role: value as MessageRole || undefined })}
                  >
                    <SelectTrigger width="100%" />
                    <SelectContent>
                      <SelectItem value="">
                        <Text>{t('common.all')}</Text>
                      </SelectItem>
                      <SelectItem value="user">
                        <Text>{t('chat.user')}</Text>
                      </SelectItem>
                      <SelectItem value="assistant">
                        <Text>{t('chat.assistant')}</Text>
                      </SelectItem>
                      <SelectItem value="system">
                        <Text>{t('chat.system')}</Text>
                      </SelectItem>
                    </SelectContent>
                  </Select>
                </YStack>
                
                <YStack flex={1}>
                  <Text fontWeight="$6" marginBottom="$2" fontSize="$2">
                    {t('chat.status')}
                  </Text>
                  <Select
                    value={filters.status || ''}
                    onValueChange={(value) => handleFilterChange({ status: value as MessageStatus || undefined })}
                  >
                    <SelectTrigger width="100%" />
                    <SelectContent>
                      <SelectItem value="">
                        <Text>{t('common.all')}</Text>
                      </SelectItem>
                      <SelectItem value="sending">
                        <Text>{t('chat.sending')}</Text>
                      </SelectItem>
                      <SelectItem value="sent">
                        <Text>{t('chat.sent')}</Text>
                      </SelectItem>
                      <SelectItem value="failed">
                        <Text>{t('chat.failed')}</Text>
                      </SelectItem>
                      <SelectItem value="streaming">
                        <Text>{t('chat.streaming')}</Text>
                      </SelectItem>
                    </SelectContent>
                  </Select>
                </YStack>
              </XStack>
            </YStack>
          )}
        </YStack>
      )}

      {/* Messages */}
      <ScrollView flex={1} maxHeight={maxHeight} showsVerticalScrollIndicator={true}>
        <YStack padding="$4" space="$6">
          {Object.keys(filteredGroupedMessages).length === 0 ? (
            <YStack height={256} alignItems="center" justifyContent="center">
              <Bot size={48} color="$colorFocus" />
              <Text fontWeight="$6" fontSize="$5" marginTop="$4" marginBottom="$2">
                {searchQuery || Object.keys(filters).length > 0 
                  ? t('chat.noMessagesFound') 
                  : t('chat.noMessagesYet')
                }
              </Text>
              <Text color="$colorFocus" textAlign="center">
                {searchQuery || Object.keys(filters).length > 0 
                  ? t('chat.adjustSearchOrFilters')
                  : t('chat.startConversation')
                }
              </Text>
            </YStack>
          ) : (
            Object.entries(filteredGroupedMessages)
              .sort(([a], [b]) => new Date(b).getTime() - new Date(a).getTime())
              .map(([date, messages]) => (
                <YStack key={date} space="$4">
                  {/* Date Header */}
                  <XStack alignItems="center" gap="$4">
                    <Separator flex={1} />
                    <XStack alignItems="center" gap="$2">
                      <Text fontSize="$2" fontWeight="$5" color="$colorFocus">
                        {formatDate(date)}
                      </Text>
                      <Badge size="$1" variant="outline">
                        <Text fontSize="$1">
                          {messages.length} {messages.length !== 1 
                            ? t('chat.messages') 
                            : t('chat.message')
                          }
                        </Text>
                      </Badge>
                    </XStack>
                    <Separator flex={1} />
                  </XStack>

                  {/* Messages for this date */}
                  <YStack space="$4">
                    {messages
                      .sort((a, b) => new Date(a.timestamp).getTime() - new Date(b.timestamp).getTime())
                      .map((message) => (
                        <XStack
                          key={message.id}
                          gap="$3"
                          justifyContent={message.role === 'user' ? "flex-end" : "flex-start"}
                        >
                          {message.role === 'assistant' && (
                            <Avatar size="$2" circular>
                              <AvatarImage src="/ai-avatar.png" alt={t('chat.aiAssistant')} />
                              <AvatarFallback>
                                <Bot size={16} />
                              </AvatarFallback>
                            </Avatar>
                          )}
                          
                          <YStack
                            maxWidth="80%"
                            space="$2"
                            order={message.role === 'user' ? 1 : 2}
                          >
                            <Theme name={message.role === 'user' ? "accent" : "base"}>
                              <Card
                                backgroundColor={message.role === 'user' ? "$accentBackground" : "$backgroundHover"}
                              >
                                <CardContent padding="$3">
                                  <Text whiteSpace="pre-wrap" wordWrap="break-word">
                                    {message.content}
                                    {message.status === 'streaming' && (
                                      <Text animation="pulse" opacity={0.5}>â–Œ</Text>
                                    )}
                                  </Text>
                                  
                                  {message.attachments && message.attachments.length > 0 && (
                                    <YStack marginTop="$2" space="$1">
                                      {message.attachments.map((attachment) => (
                                        <XStack
                                          key={attachment.id}
                                          alignItems="center"
                                          gap="$2"
                                          padding="$2"
                                          backgroundColor="$background"
                                          opacity={0.8}
                                          borderRadius="$2"
                                        >
                                          <Text fontSize="$2" flex={1} numberOfLines={1} ellipsizeMode="tail">
                                            {attachment.name}
                                          </Text>
                                          <Badge size="$1" variant="outline">
                                            <Text fontSize="$1">{attachment.type}</Text>
                                          </Badge>
                                        </XStack>
                                      ))}
                                    </YStack>
                                  )}
                                </CardContent>
                              </Card>
                            </Theme>
                            
                            <XStack alignItems="center" gap="$2">
                              <Text fontSize="$1" color="$colorFocus">
                                {formatTimestamp(message.timestamp)}
                              </Text>
                              
                              {/* Status indicator */}
                              <XStack alignItems="center" gap="$1">
                                <YStack 
                                  width={8} 
                                  height={8} 
                                  borderRadius={4} 
                                  backgroundColor={getStatusColor(message.status)} 
                                />
                                <Text fontSize="$1" color="$colorFocus">
                                  {getStatusText(message.status)}
                                </Text>
                              </XStack>
                              
                              {/* Message actions */}
                              <DropdownMenu>
                                <DropdownMenuTrigger asChild>
                                  <Button
                                    size="$1"
                                    circular
                                    chromeless
                                  >
                                    <MoreVertical size={12} />
                                  </Button>
                                </DropdownMenuTrigger>
                                <DropdownMenuContent align="end">
                                  <DropdownMenuItem
                                    onPress={() => copyMessage(message.content)}
                                  >
                                    <XStack gap="$2" alignItems="center">
                                      <Copy size={12} />
                                      <Text fontSize="$2">{t('common.copy')}</Text>
                                    </XStack>
                                  </DropdownMenuItem>
                                  {message.role === 'user' && (
                                    <DropdownMenuItem
                                      onPress={() => onMessageAction?.('regenerate', message.id)}
                                    >
                                      <XStack gap="$2" alignItems="center">
                                        <RotateCcw size={12} />
                                        <Text fontSize="$2">{t('chat.regenerate')}</Text>
                                      </XStack>
                                    </DropdownMenuItem>
                                  )}
                                  <DropdownMenuItem
                                    onPress={() => onMessageAction?.('delete', message.id)}
                                  >
                                    <XStack gap="$2" alignItems="center">
                                      <Trash2 size={12} color="$red10" />
                                      <Text fontSize="$2" color="$red10">{t('common.delete')}</Text>
                                    </XStack>
                                  </DropdownMenuItem>
                                </DropdownMenuContent>
                              </DropdownMenu>
                            </XStack>
                          </YStack>
                          
                          {message.role === 'user' && (
                            <Avatar size="$2" circular>
                              <AvatarImage src="/user-avatar.png" alt={t('chat.you')} />
                              <AvatarFallback>
                                <User size={16} />
                              </AvatarFallback>
                            </Avatar>
                          )}
                        </XStack>
                      ))}
                  </YStack>
                </YStack>
              ))
          )}
          
          <YStack ref={messagesEndRef} />
        </YStack>
      </ScrollView>
    </YStack>
  );
}
