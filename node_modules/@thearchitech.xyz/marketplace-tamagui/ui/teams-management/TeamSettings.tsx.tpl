'use client';

import { useState } from 'react';
import { useTranslation } from '@/lib/i18n';
import { useForm, Controller } from 'react-hook-form';
import { zodResolver } from '@hookform/resolvers/zod';
import { z } from 'zod';
import { useTeamsUpdate } from '@/lib/teams-management';
import { Loader2, Settings, Save } from 'lucide-react-native';
import type { Team, TeamSettingsFormData } from '@/lib/teams-management';

import {
  YStack,
  XStack,
  Button,
  Input,
  Label,
  TextArea,
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
  Switch,
  Alert,
  AlertDescription,
  Text,
  Theme,
  Square
} from 'tamagui';

const teamSettingsSchema = z.object({
  name: z.string().min(1, 'Team name is required'),
  description: z.string().optional(),
  allowMemberInvites: z.boolean(),
  requireApprovalForJoins: z.boolean(),
  allowPublicVisibility: z.boolean(),
  maxMembers: z.number().positive().optional(),
  notifications: z.object({
    email: z.boolean(),
    inApp: z.boolean(),
    weeklyDigest: z.boolean(),
  }),
});

type TeamSettingsFormValues = z.infer<typeof teamSettingsSchema>;

interface TeamSettingsProps {
  team: Team;
  onSuccess?: () => void;
}

export function TeamSettings({ team, onSuccess }: TeamSettingsProps) {
  const { t } = useTranslation();
  const [isSubmitting, setIsSubmitting] = useState(false);
  const updateTeam = useTeamsUpdate();

  const {
    register,
    handleSubmit,
    formState: { errors },
    watch,
    setValue,
    control
  } = useForm<TeamSettingsFormValues>({
    resolver: zodResolver(teamSettingsSchema),
    defaultValues: {
      name: team.name,
      description: team.description || '',
      allowMemberInvites: team.settings.allowMemberInvites,
      requireApprovalForJoins: team.settings.requireApprovalForJoins,
      allowPublicVisibility: team.settings.allowPublicVisibility,
      maxMembers: team.settings.maxMembers,
      notifications: team.settings.notifications,
    },
  });

  const onSubmit = async (data: TeamSettingsFormValues) => {
    setIsSubmitting(true);
    try {
      await updateTeam.mutateAsync({
        id: team.id,
        name: data.name,
        description: data.description,
        settings: {
          allowMemberInvites: data.allowMemberInvites,
          requireApprovalForJoins: data.requireApprovalForJoins,
          allowPublicVisibility: data.allowPublicVisibility,
          maxMembers: data.maxMembers,
          notifications: data.notifications,
        },
      });
      onSuccess?.();
    } catch (error) {
      console.error('Failed to update team:', error);
    } finally {
      setIsSubmitting(false);
    }
  };

  return (
    <Card elevate>
      <CardHeader>
        <CardTitle>
          <XStack alignItems="center" gap="$2">
            <Settings size={20} />
            <Text>{t('teams.settings.title')}</Text>
          </XStack>
        </CardTitle>
        <CardDescription>
          {t('teams.settings.description')}
        </CardDescription>
      </CardHeader>

      <CardContent>
        <YStack space="$6" as="form" onSubmit={handleSubmit(onSubmit)}>
          {updateTeam.error && (
            <Alert theme="red">
              <XStack gap="$2" alignItems="center">
                <AlertDescription>
                  {updateTeam.error.message || t('teams.settings.updateError')}
                </AlertDescription>
              </XStack>
            </Alert>
          )}

          {/* Basic Information */}
          <YStack space="$4">
            <Text fontSize="$4" fontWeight="$6">
              {t('teams.settings.basicInformation')}
            </Text>
            
            <YStack space="$2">
              <Label htmlFor="name">{t('teams.settings.teamName')}</Label>
              <Input
                id="name"
                placeholder={t('teams.settings.teamNamePlaceholder')}
                value={watch('name')}
                onChangeText={(text) => setValue('name', text)}
              />
              {errors.name && (
                <Text fontSize="$1" color="$red10">{errors.name.message}</Text>
              )}
            </YStack>

            <YStack space="$2">
              <Label htmlFor="description">{t('teams.settings.description')}</Label>
              <TextArea
                id="description"
                placeholder={t('teams.settings.descriptionPlaceholder')}
                numberOfLines={3}
                value={watch('description')}
                onChangeText={(text) => setValue('description', text)}
              />
            </YStack>
          </YStack>

          {/* Team Settings */}
          <YStack space="$4">
            <Text fontSize="$4" fontWeight="$6">
              {t('teams.settings.teamSettings')}
            </Text>

            <YStack space="$4">
              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="allowMemberInvites">{t('teams.settings.allowMemberInvites')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.allowMemberInvitesDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="allowMemberInvites"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="allowMemberInvites"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>

              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="requireApprovalForJoins">{t('teams.settings.requireApproval')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.requireApprovalDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="requireApprovalForJoins"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="requireApprovalForJoins"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>

              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="allowPublicVisibility">{t('teams.settings.publicVisibility')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.publicVisibilityDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="allowPublicVisibility"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="allowPublicVisibility"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>

              <YStack space="$2">
                <Label htmlFor="maxMembers">{t('teams.settings.maximumMembers')}</Label>
                <Input
                  id="maxMembers"
                  keyboardType="numeric"
                  placeholder="50"
                  value={watch('maxMembers')?.toString() || ''}
                  onChangeText={(text) => {
                    const num = parseInt(text);
                    setValue('maxMembers', isNaN(num) ? undefined : num);
                  }}
                />
                <Text fontSize="$1" color="$colorFocus">
                  {t('teams.settings.leaveEmptyForUnlimited')}
                </Text>
              </YStack>
            </YStack>
          </YStack>

          {/* Notification Settings */}
          <YStack space="$4">
            <Text fontSize="$4" fontWeight="$6">
              {t('teams.settings.notificationSettings')}
            </Text>

            <YStack space="$4">
              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="emailNotifications">{t('teams.settings.emailNotifications')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.emailNotificationsDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="notifications.email"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="emailNotifications"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>

              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="inAppNotifications">{t('teams.settings.inAppNotifications')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.inAppNotificationsDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="notifications.inApp"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="inAppNotifications"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>

              <XStack alignItems="center" justifyContent="space-between">
                <YStack space="$0.5" flex={1}>
                  <Label htmlFor="weeklyDigest">{t('teams.settings.weeklyDigest')}</Label>
                  <Text fontSize="$2" color="$colorFocus">
                    {t('teams.settings.weeklyDigestDescription')}
                  </Text>
                </YStack>
                <Controller
                  control={control}
                  name="notifications.weeklyDigest"
                  render={({ field: { value, onChange } }) => (
                    <Switch 
                      id="weeklyDigest"
                      checked={value}
                      onCheckedChange={onChange}
                    />
                  )}
                />
              </XStack>
            </YStack>
          </YStack>

          {/* Actions */}
          <XStack justifyContent="flex-end" gap="$2" paddingTop="$4">
            <Button 
              theme="blue"
              onPress={handleSubmit(onSubmit)} 
              disabled={isSubmitting}
              icon={isSubmitting ? 
                <Loader2 size={16} style={{ marginRight: 8 }} /> : 
                <Save size={16} style={{ marginRight: 8 }} />
              }
            >
              {t('teams.settings.saveSettings')}
            </Button>
          </XStack>
        </YStack>
      </CardContent>
    </Card>
  );
}
